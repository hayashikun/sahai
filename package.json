{
  "name": "sahai",
  "version": "0.1.7",
  "description": "AI Coding Agent orchestration tool with Kanban interface",
  "type": "module",
  "bin": {
    "sahai": "./bin/sahai.ts"
  },
  "files": [
    "bin",
    "packages/backend/src",
    "packages/backend/drizzle",
    "packages/frontend/dist",
    "packages/shared"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "bun run --filter backend dev",
    "dev:frontend": "bun run --filter frontend dev",
    "dev": "bun run dev:backend & bun run dev:frontend",
    "build": "bun run build:frontend",
    "build:frontend": "bun run --filter frontend build",
    "start": "bun run bin/sahai.ts",
    "typecheck": "bun run typecheck:backend && bun run typecheck:frontend",
    "typecheck:backend": "bunx tsc --noEmit -p packages/backend",
    "typecheck:frontend": "bunx tsc --noEmit -p packages/frontend",
    "lint": "biome lint . && bun run typecheck",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "biome ci . && bun run typecheck",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "ai",
    "coding",
    "agent",
    "orchestration",
    "kanban",
    "claude",
    "codex"
  ],
  "author": "hayashikun",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hayashikun/sahai.git"
  },
  "homepage": "https://github.com/hayashikun/sahai",
  "bugs": {
    "url": "https://github.com/hayashikun/sahai/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "drizzle-orm": "^0.44.7",
    "glob": "^13.0.0",
    "hono": "^4.6.0",
    "zod": "^4.1.13"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8"
  }
}
